	<script>

		let direction = "vertical";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'home')
				window.open("https://www.notion.so/reinealicis/Home-467a8f24c8014f7495280975634b5340?pvs=4", '_blank').focus();
			else if (id == "Sims")
				window.open("https://www.notion.so/reinealicis/sims-ceb695ed6d7a4ad995baddac01474256?pvs=4", '_blank').focus();
			else if (id == "fave-cc")
				window.open("https://www.notion.so/reinealicis/fav-cc-creators-e9036358a32f4fbf972c97cdb42eda5a?pvs=4", '_blank').focus();
			else if (id == "cc-shop")
				window.open("https://www.pinterest.com/MadameRoxaneSimstress/", '_blank').focus();
			else if (id == "hub")
				window.open("https://ts4challengehub.tumblr.com/", '_blank').focus();
			else if (id == "wheel")
				window.open("https://pickerwheel.com/", '_blank').focus();
			else if (id == "database")
				window.open("https://www.notion.so/reinealicis/Master-Sims-Database-e0cbb8fff57e46bebc243fc1e8181995?pvs=4", '_blank').focus();

		}
	</script>


