<body>

	<nav class="navMenu  border background">
		<a id="home" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-house"></i> Home</a>
		<a id="Sims" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-user"></i> Sims</a>
		<a id="fav-cc" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-heart-circle-check"></i> Favorite CC</a>
		<a id="cc-shop" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-tags"></i> CC Shopping</a>
		<a id="hub" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-comments"></i> Challenge Hub</a>
		<a id="wheel" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-spinner"></i> Spinner Wheel</a>
		<a id="database" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-circle-exclamation"></i> Master Database</a>

